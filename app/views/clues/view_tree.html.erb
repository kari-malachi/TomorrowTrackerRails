<div id='page_title'>
  <h1>Clue Tree</h1>
</div>

<%= link_to 'Write a new clue', new_clue_path %>

<% @clues.each do |clue| %>
  <div class='clue_box'>
    <p>
      <%= link_to clue.title, show_clue_path(clue) %>
    </p>
  </div>
<% end %>

<%= link_to 'Return to Stack Overview', show_stack_path(@stack) %>
