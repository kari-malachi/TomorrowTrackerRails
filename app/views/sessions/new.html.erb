<h1>New Login</h1>

<%= render 'shared/errors', container: @user %>
<%= form_tag create_session_path do %>
  <p>
    Username<br>
    <%= text_field_tag :username %>
  </p>
  <p>
    Password<br>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>

<%= link_to 'Or Create a New Account', new_user_path %>
