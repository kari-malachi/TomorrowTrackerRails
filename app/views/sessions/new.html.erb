<h1>New Login</h1>

<% if flash[:alert] %>
  <div class='error_messages'>
    <%= flash[:alert] %>
  </div>
<% end %>


<%= form_tag create_session_path do %>
  <p>
    Username<br>
    <%= text_field_tag :username %>
  </p>
  <p>
    Password<br>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>

<%= link_to 'Or Create a New Account', new_user_path %>
