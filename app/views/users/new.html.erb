<h1>New User</h1>

<%= render 'shared/errors', container: @user %>
<%= form_for @user, url: create_user_path(@user) do |f| %>
  <p>
    Your Name<br>
    <%= f.text_field :name %>
  </p>
  <p>
    Are you a Stacker or Stackee?<br>
    <%= f.radio_button :type, 'Stacker' %> Stacker<br>
    <%= f.radio_button :type, 'Stackee' %> Stackee
  <p>
    Username<br>
    <%= f.text_field :username %>
  </p>
  <p>
    Password<br>
    <%= f.password_field :password %>
  </p>
  <p>
    Password confirmation<br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Sign Up' %>
  </p>
<% end %>

<%= link_to 'Or Login to an Existing Account', login_session_path %>
