<h1>New User</h1>

<% if @user.errors.any? %>
  <div class='error_messages'>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, url: create_user_path(@user) do |f| %>
  <p>
    Username<br>
    <%= f.text_field :username %>
  </p>
  <p>
    Password<br>
    <%= f.password_field :password %>
  </p>
  <p>
    Password confirmation<br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Sign Up' %>
  </p>
<% end %>

<%= link_to 'Or Login to an Existing Account', login_session_path %>
